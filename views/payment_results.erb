 <h1>
  Payment Results
</h1>

<dl>

  <dt>
    APR
  </dt>
  <dd>
    <%= sprintf('%.4f%%', @apr * 100) %>
    <%=@payment.to_fs(:percentage)%>
  </dd>

  <dt>
    Number of Years
  </dt>
  <dd>
    <%= @number_of_years%>   
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal%>   
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%=@payment.to_fs(:currency)%>   
  </dd>

</dl>

